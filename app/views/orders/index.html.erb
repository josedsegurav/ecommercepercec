<section class="hero-section d-flex align-items-center">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <div class="hero-content">
          <h1 class="hero-title mb-4">Track Your Order</h1>
          <p class="hero-text">Find your percussion instrument order quickly and easily. Enter your order details below to check status and tracking information.</p>

          <div class="search-tips">
            <h6 class="text-white mb-3"><i class="fas fa-lightbulb me-2"></i>Search Tips:</h6>
            <div class="tip-item">
              <i class="fas fa-hashtag"></i>Use your order number (e.g., #12345)
            </div>

          </div>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="search-card">
          <div class="text-center mb-4">
            <div class="search-icon d-flex align-items-center justify-content-center mx-auto mb-3">
              <i class="fas fa-search"></i>
            </div>
            <h3 class="fw-bold mb-2">Find Your Order</h3>
            <p class="text-muted">Enter any of the following to search for your order</p>
          </div>

          <%= form_with url: orders_path, method: :get, id: "orderSearchForm", local: true do |form| %>
            <div class="mb-3">
              <%= form.label :search, "Order Number, Email, or Phone", class: "form-label fw-semibold" %>
              <%= form.text_field :search, class: "form-control", placeholder: "e.g., PE2025123456", value: params[:search] %>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "Search Order", class: "btn btn-primary btn-lg" do %>
                <i class="fas fa-search me-2"></i>Search Order
              <% end %>
            </div>
          <% end %>

          <div class="text-center mt-4">
            <p class="text-muted mb-2">Need help finding your order?</p>
            <a href="https://wa.me/593996888655" class="btn btn-outline-primary">
              <i class="fab fa-whatsapp me-2"></i>Contact Support
            </a>
          </div>
        </div>

        <% if @orders.present? %>
          <div class="mt-4">
            <% @orders.each do |order| %>
              <div class="order-card clickable-card" onclick="window.location.href='<%= order_path(order) %>'">
                <div class="card-body p-4">
                  <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                      <h5 class="card-title mb-1"><%= order.order_number || order.id %></h5>
                      <div class="order-info">
                        <i class="fas fa-calendar me-1"></i>Ordered on <%= order.created_at.strftime("%B %d, %Y") %>
                      </div>
                    </div>
                    <span class="order-status status-<%= order.status&.downcase || 'pending' %>">
                      <%= order.status&.humanize || 'Pending' %>
                    </span>
                  </div>

                  <div class="row">
                    <div class="col-md-8">
                      <div class="order-info mb-2">
                        <i class="fas fa-drum me-1"></i>
                        <%= order.order_items.limit(2).map { |item| item.product.name }.join(", ") %>
                        <% if order.order_items.count > 2 %>
                          and <%= pluralize(order.order_items.count - 2, 'more item') %>
                        <% end %>
                      </div>
                      <div class="order-info">
                        <i class="fas fa-user me-1"></i><%= order.user&.name || order.customer_name || 'Guest Customer' %>
                      </div>
                    </div>
                    <div class="col-md-4 text-end">
                      <div class="order-total">$<%= number_with_precision(order.total_amount, precision: 2) %></div>
                      <div class="order-info mt-1">
                        <i class="fas fa-arrow-right me-1"></i>Click to view details
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>

            <% if @orders.empty? && params[:search].present? %>
              <div class="alert alert-info mt-4">
                <i class="fas fa-info-circle me-2"></i>
                No orders found matching "<%= params[:search] %>". Please check your search terms or contact support.
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>