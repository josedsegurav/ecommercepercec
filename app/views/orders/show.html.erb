
    <!-- Order Header Section -->
    <section class="bg-light mt-4" style="padding: 60px 0 40px 0;">
        <div class="container">
            <div class="row">
                <div class="col-12">

                    <div class="d-flex align-items-center mb-3">
                        <div class="status-icon me-3">
                            <% if @order.status == 'pending' %>
                                <i class="fas fa-clock text-warning" style="font-size: 2.5rem;"></i>
                            <% elsif @order.status == 'confirmed' %>
                                <i class="fas fa-check-circle text-success" style="font-size: 2.5rem;"></i>
                            <% elsif @order.status == 'shipped' %>
                                <i class="fas fa-shipping-fast text-primary" style="font-size: 2.5rem;"></i>
                            <% elsif @order.status == 'delivered' %>
                                <i class="fas fa-box-open text-success" style="font-size: 2.5rem;"></i>
                            <% else %>
                                <i class="fas fa-info-circle text-primary" style="font-size: 2.5rem;"></i>
                            <% end %>
                        </div>
                        <div>
                            <h1 class="section-title position-relative mb-4">Order Confirmation</h1>
                            <p class="text-muted fs-5 mb-0">Thank you for your order!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Order Details Section -->
    <section class="bg-white" style="padding: 60px 0;">
        <div class="container">
            <div class="row">
                <!-- Order Summary -->
                <div class="col-lg-8">
                    <!-- Order Status Card -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <h4 class="mb-0 fw-semibold">Order <%= @order.order_number %></h4>
                                    <small>Placed on <%= @order.order_date.strftime("%B %d, %Y at %I:%M %p") %></small>
                                </div>
                                <div class="col-md-6 text-md-end">
                                    <span class="badge
                                        <% case @order.status
                                           when 'pending' %>bg-warning text-dark
                                        <% when 'confirmed' %>bg-success
                                        <% when 'processing' %>bg-info
                                        <% when 'shipped' %>bg-primary
                                        <% when 'delivered' %>bg-success
                                        <% when 'cancelled' %>bg-danger
                                        <% else %>bg-secondary
                                        <% end %> fs-6 px-3 py-2">
                                        <%= @order.status.humanize %>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="fw-semibold mb-2">Order Status</h6>
                                    <p class="text-muted mb-0">
                                        <% case @order.status
                                           when 'pending' %>
                                               Your order has been received and is being reviewed.
                                        <% when 'confirmed' %>
                                               Your order has been confirmed and is being prepared.
                                        <% when 'processing' %>
                                               Your order is being processed and will ship soon.
                                        <% when 'shipped' %>
                                               Your order has been shipped and is on its way.
                                        <% when 'delivered' %>
                                               Your order has been successfully delivered.
                                        <% when 'cancelled' %>
                                               This order has been cancelled.
                                        <% else %>
                                               Order status: <%= @order.status.humanize %>
                                        <% end %>
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="fw-semibold mb-2">Payment Status</h6>
                                    <span class="badge
                                        <% case @order.payment_status
                                           when 'pending' %>bg-warning text-dark
                                        <% when 'paid' %>bg-success
                                        <% when 'failed' %>bg-danger
                                        <% when 'refunded' %>bg-info
                                        <% else %>bg-secondary
                                        <% end %> fs-6">
                                        <%= @order.payment_status.humanize %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Order Items -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white border-bottom">
                            <h4 class="mb-0 fw-semibold">Order Items (<%= @order.order_items.sum(:quantity) %>)</h4>
                        </div>
                        <div class="card-body p-0">
                            <% @order.order_items.each_with_index do |item, index| %>
                                <div class="order-item p-4 <%= 'border-bottom' unless index == @order.order_items.length - 1 %>">
                                    <div class="row align-items-center">
                                        <div class="col-md-2">
                                            <div class="product-image d-flex align-items-center justify-content-center" style="height: 80px; background-color: #f8f9fa; border-radius: 8px;">
                                                <% if item.product.image.attached? %>
                                                    <%= image_tag item.product.image,
                                                        class: "img-fluid rounded",
                                                        style: "max-height: 80px; object-fit: cover;" %>
                                                <% else %>
                                                    <i class="fas fa-drum text-primary" style="font-size: 2rem; opacity: 0.3;"></i>
                                                <% end %>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <h5 class="fw-semibold mb-1"><%= item.product.name %></h5>
                                            <p class="text-muted mb-1 small"><%= truncate(item.product.description, length: 100) %></p>
                                            <div class="text-primary fw-bold">Unit Price: $<%= number_to_currency(item.unit_price, unit: '') %></div>
                                        </div>
                                        <div class="col-md-2 text-center">
                                            <span class="fw-semibold fs-5">Qty: <%= item.quantity %></span>
                                        </div>
                                        <div class="col-md-2 text-end">
                                            <div class="h5 text-primary fw-bold">$<%= number_to_currency(item.total_price, unit: '') %></div>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>

                    <!-- Customer Information -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white border-bottom">
                            <h4 class="mb-0 fw-semibold">Customer Information</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="fw-semibold text-primary mb-2">
                                        <i class="fas fa-user me-2"></i>Customer Details
                                    </h6>
                                    <p class="mb-1"><strong>Name:</strong> <%= @order.customer_name %></p>
                                    <p class="mb-1"><strong>Email:</strong> <%= @order.customer_email %></p>
                                    <p class="mb-3"><strong>Phone:</strong> <%= @order.customer_phone %></p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="fw-semibold text-primary mb-2">
                                        <i class="fas fa-shipping-fast me-2"></i>Shipping Address
                                    </h6>
                                    <p class="mb-0"><%= simple_format(@order.shipping_address) %></p>
                                </div>
                            </div>

                            <% if @order.billing_address != @order.shipping_address %>
                                <hr>
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="fw-semibold text-primary mb-2">
                                            <i class="fas fa-credit-card me-2"></i>Billing Address
                                        </h6>
                                        <p class="mb-0"><%= simple_format(@order.billing_address) %></p>
                                    </div>
                                </div>
                            <% end %>

                            <% if @order.notes.present? %>
                                <hr>
                                <div class="row">
                                    <div class="col-12">
                                        <h6 class="fw-semibold text-primary mb-2">
                                            <i class="fas fa-sticky-note me-2"></i>Order Notes
                                        </h6>
                                        <p class="mb-0"><%= simple_format(@order.notes) %></p>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>

                <!-- Order Summary Sidebar -->
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm sticky-top" style="top: 100px;">
                        <div class="card-header bg-primary text-white">
                            <h4 class="mb-0 fw-semibold">Order Summary</h4>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-3">
                                <span>Subtotal:</span>
                                <span class="fw-semibold">$<%= number_to_currency(@order.subtotal, unit: '') %></span>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Shipping:</span>
                                <span class="fw-semibold">
                                    <%= @order.shipping_cost > 0 ? "$#{number_to_currency(@order.shipping_cost, unit: '')}" : "Free" %>
                                </span>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Tax (IVA 12%):</span>
                                <span class="fw-semibold">$<%= number_to_currency(@order.tax_amount, unit: '') %></span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-4">
                                <span class="h5 fw-bold">Total:</span>
                                <span class="h5 fw-bold text-primary">$<%= number_to_currency(@order.total_amount, unit: '') %></span>
                            </div>

                            <!-- Payment Information -->
                            <div class="payment-info mb-4">
                                <h6 class="fw-semibold mb-2">Payment Method</h6>
                                <div class="d-flex align-items-center">
                                    <% case @order.payment_method
                                       when 'bank_transfer' %>
                                        <i class="fas fa-university text-primary me-2"></i>
                                        <span>Bank Transfer</span>
                                    <% when 'cash_on_delivery' %>
                                        <i class="fas fa-money-bill-wave text-success me-2"></i>
                                        <span>Cash on Delivery</span>
                                    <% when 'whatsapp_order' %>
                                        <i class="fab fa-whatsapp text-success me-2"></i>
                                        <span>WhatsApp Order</span>
                                    <% else %>
                                        <i class="fas fa-credit-card text-primary me-2"></i>
                                        <span><%= @order.payment_method.humanize %></span>
                                    <% end %>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-grid gap-2">
                                <% if @order.payment_status == 'pending' && @order.payment_method == 'bank_transfer' %>
                                    <button class="btn btn-primary">
                                        <i class="fas fa-university me-2"></i>Payment Instructions
                                    </button>
                                <% end %>

                                <a href="https://wa.me/593996888655?text=Hi, I have a question about order #<%= @order.order_number %>"
                                   class="btn btn-success" target="_blank">
                                    <i class="fab fa-whatsapp me-2"></i>Contact Support
                                </a>

                                <a href="mailto:info@percusionecuador.com?subject=Order Inquiry - #<%= @order.order_number %>"
                                   class="btn btn-outline-primary">
                                    <i class="fas fa-envelope me-2"></i>Email Us
                                </a>

                                <a href="/" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Next Steps Section -->
    <section class="bg-light" style="padding: 60px 0;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h2 class="section-title text-center position-relative mb-4">What Happens Next?</h2>

                    <div class="timeline">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="timeline-item d-flex">
                                    <div class="timeline-icon me-3">
                                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <span class="fw-bold">1</span>
                                        </div>
                                    </div>
                                    <div>
                                        <h5 class="fw-semibold mb-2">Order Confirmation</h5>
                                        <p class="text-muted mb-0">We'll send you an email confirmation with your order details.</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="timeline-item d-flex">
                                    <div class="timeline-icon me-3">
                                        <div class="rounded-circle bg-info text-white d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <span class="fw-bold">2</span>
                                        </div>
                                    </div>
                                    <div>
                                        <h5 class="fw-semibold mb-2">Processing</h5>
                                        <p class="text-muted mb-0">We'll prepare your percussion instruments with care.</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="timeline-item d-flex">
                                    <div class="timeline-icon me-3">
                                        <div class="rounded-circle bg-warning text-white d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <span class="fw-bold">3</span>
                                        </div>
                                    </div>
                                    <div>
                                        <h5 class="fw-semibold mb-2">Shipping</h5>
                                        <p class="text-muted mb-0">Your order will be shipped and you'll receive tracking information.</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="timeline-item d-flex">
                                    <div class="timeline-icon me-3">
                                        <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <span class="fw-bold">4</span>
                                        </div>
                                    </div>
                                    <div>
                                        <h5 class="fw-semibold mb-2">Delivery</h5>
                                        <p class="text-muted mb-0">Enjoy your new percussion instruments!</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="bg-white" style="padding: 60px 0;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="section-title position-relative mb-4">Questions About Your Order?</h2>
                    <p class="fs-5 text-muted mb-4">
                        Our team is here to help! Contact us through your preferred channel and reference order #<%= @order.order_number %>.
                    </p>

                    <div class="row g-3">
                        <div class="col-md-4">
                            <a href="https://wa.me/593996888655?text=Hi, I have a question about order #<%= @order.order_number %>"
                               class="contact-card card h-100 text-decoration-none border-0 shadow-sm" target="_blank">
                                <div class="card-body text-center">
                                    <i class="fab fa-whatsapp text-success mb-3" style="font-size: 3rem;"></i>
                                    <h6 class="fw-semibold">WhatsApp</h6>
                                    <p class="text-muted small mb-0">Quick responses</p>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4">
                            <a href="mailto:info@percusionecuador.com?subject=Order Inquiry - #<%= @order.order_number %>"
                               class="contact-card card h-100 text-decoration-none border-0 shadow-sm">
                                <div class="card-body text-center">
                                    <i class="fas fa-envelope text-primary mb-3" style="font-size: 3rem;"></i>
                                    <h6 class="fw-semibold">Email</h6>
                                    <p class="text-muted small mb-0">Detailed support</p>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-4">
                            <a href="tel:+593996888655"
                               class="contact-card card h-100 text-decoration-none border-0 shadow-sm">
                                <div class="card-body text-center">
                                    <i class="fas fa-phone text-info mb-3" style="font-size: 3rem;"></i>
                                    <h6 class="fw-semibold">Phone</h6>
                                    <p class="text-muted small mb-0">Direct contact</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>