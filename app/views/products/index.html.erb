<p style="color: green"><%= notice %></p>

<% content_for :title, "Products" %>
<!-- Page Header -->
<section class="page-header d-flex align-items-center" style="background: linear-gradient(135deg, #0D8DC8, #1BACF0); padding: 120px 0 80px; margin-top: 76px;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><%= link_to "Home", root_path, class: "text-white-50 text-decoration-none" %></li>
                        <li class="breadcrumb-item active text-white" aria-current="page">Products</li>
                    </ol>
                </nav>
                <h1 class="display-4 text-white fw-bold mb-3">Our Products</h1>
                <p class="text-white-50 fs-5 mb-0">Discover our wide selection of percussion instruments from the worlds best brands.</p>
            </div>
            <div class="col-lg-4 text-end">
                <div class="text-white">
                    <span class="display-6 fw-bold d-block"><%= @total_products %></span>
                    <small class="opacity-75 fs-6">Available Products</small>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Filters and Search -->
<section class="py-4 bg-white border-bottom">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <%= form_with url: products_path, method: :get, local: true, class: "d-flex gap-3" do |f| %>
                    <div class="flex-fill">
                        <%= f.text_field :search, placeholder: "Search products...",
                            value: params[:search],
                            class: "form-control form-control-lg border-0 shadow-sm",
                            style: "background-color: #f8f9fa;" %>
                    </div>
                    <%= f.submit "Search", class: "btn btn-primary btn-lg px-4" %>
                <% end %>
            </div>

            <div class="col-lg-6">
                <div class="d-flex gap-3 justify-content-lg-end mt-3 mt-lg-0">

                <!-- Category Filter Dropdown -->
                    <%= form_with url: products_path, method: :get, local: true, class: "d-flex gap-2 align-items-center" do |f| %>
                        <%= f.hidden_field :search, value: params[:search] %>
                        <%= f.hidden_field :sort_by, value: params[:sort_by] %>

                        <%= f.select :category_id,
                            options_for_select(
                                [["All Categories", nil]] + @categories.map { |c| [c.name, c.id] },
                                params[:category_id]
                            ),
                            {},
                            { class: "form-select" } %>
                    <% end %>

                    <%= form_with url: products_path, method: :get, local: true, class: "d-flex gap-2 align-items-center" do |f| %>
                        <%= f.hidden_field :search, value: params[:search] %>
                        <%= f.select :sort_by,
                            options_for_select([
                                ["Most Recent", "newest"],
                                ["Price: low to high", "price_asc"],
                                ["Price: high to low", "price_desc"],
                                ["Name A-Z", "name_asc"]
                            ], params[:sort_by]),
                            { prompt: "Sort By" },
                            { class: "form-select", onchange: "this.form.submit();" } %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Products Grid -->
<section class="py-5">
    <div class="container">
        <% if @products.any? %>
            <div class="row g-4">
                <% @products.each do |product| %>
                    <div class="col-lg-4 col-md-6">
                        <div class="product-card card h-100 border-0 shadow-sm">
                            <div class="product-image position-relative" style="height: 250px; background: linear-gradient(135deg, #f8f9fa, #e9ecef); overflow: hidden;">
                                <% if product.image.attached? %>
                                    <%= image_tag product.image,
                                        class: "w-100 h-100",
                                        style: "object-fit: cover;" %>
                                <% else %>
                                    <div class="d-flex align-items-center justify-content-center h-100">
                                        <i class="fas fa-drum text-primary" style="font-size: 4rem; opacity: 0.3;"></i>
                                    </div>
                                <% end %>

                                <!-- Product badges -->
                                <div class="position-absolute top-0 start-0 m-3">
                                    <% if product.stock_quantity <= 5 %>
                                        <span class="badge bg-warning text-dark mb-1 d-block">Few Stock</span>
                                    <% end %>
                                    <% if product.created_at > 30.days.ago %>
                                        <span class="badge bg-success mb-1 d-block">New</span>
                                    <% end %>
                                </div>

                                <!-- Quick actions -->
                                <div class="position-absolute top-0 end-0 m-3">
                                    <div class="d-flex flex-column gap-2">
                                        <%= link_to product_path(product),
                                            class: "btn btn-light btn-sm rounded-circle d-flex align-items-center justify-content-center",
                                            style: "width: 40px; height: 40px;" do %>
                                            <i class="fas fa-eye"></i>
                                        <% end %>
                                    </div>
                                </div>
                            </div>

                            <div class="card-body p-4">
                                <div class="mb-2">
                                    <span class="badge bg-light text-primary"><%= product.category.name %></span>
                                </div>
                                <h5 class="card-title fw-semibold mb-2">
                                    <%= link_to product.name, product_path(product),
                                        class: "text-decoration-none text-dark" %>
                                </h5>
                                <p class="card-text text-muted small mb-3">
                                    <%= truncate(product.description, length: 80) %>
                                </p>

                                <!-- Price and stock info -->
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="h4 text-primary fw-bold mb-0">$<%= product.selling_price %></div>
                                    <small class="text-muted">
                                        <i class="fas fa-box me-1"></i>
                                        <%= product.stock_quantity %> disponibles
                                    </small>
                                </div>

                                <!-- Vendor info -->
                                <% if product.vendor.present? %>
                                    <div class="small text-muted mb-3">
                                        <i class="fas fa-store me-1"></i>
                                        <%= product.vendor.name %>
                                    </div>
                                <% end %>

                                <!-- Action buttons -->
                                <div class="d-grid gap-2">
                                    <% if product.stock_quantity > 0 %>
                                    <%= button_to add_cart_index_path(product), method: :post, class: "add_button btn btn-primary rounded-3" do %>
                                      <i class="fas fa-cart-plus me-2"></i>Add to Cart
                                      <% end %>

                                    <% else %>
                                        <button class="btn btn-outline-secondary rounded-3" disabled>
                                            <i class="fas fa-times me-2"></i>Out of Stock
                                        </button>
                                    <% end %>
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <a href="https://wa.me/593996888655?text=Hola, me interesa el producto: <%= product.name %>"
                                               class="btn btn-outline-success btn-sm w-100" target="_blank">
                                                <i class="fab fa-whatsapp me-1"></i>WhatsApp
                                            </a>
                                        </div>
                                        <div class="col-6">
                                            <%= link_to product_path(product),
                                                class: "btn btn-outline-primary btn-sm w-100" do %>
                                                <i class="fas fa-info-circle me-1"></i>Details
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>

            <!-- Pagination Controls -->
            <div class="row mt-5">
                <div class="col-12">
                    <!-- Pagination Info -->
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
                        <div class="pagination-info mb-3 mb-md-0">
                            <p class="text-muted mb-0">
                                Página <%= @products.current_page %> de <%= @products.total_pages %>
                                (<%= @total_products %> productos en total)
                            </p>
                        </div>

                        <!-- Jump to page -->
                        <% if @products.total_pages > 10 %>
                            <%= form_with url: products_path, method: :get, local: true, class: "d-flex align-items-center gap-2" do |f| %>
                                <%= f.hidden_field :search, value: params[:search] %>
                                <%= f.hidden_field :category_id, value: params[:category_id] %>
                                <%= f.hidden_field :sort_by, value: params[:sort_by] %>
                                <%= f.hidden_field :per_page, value: params[:per_page] %>
                                <small class="text-muted">Ir a página:</small>
                                <%= f.number_field :page,
                                    value: @products.current_page,
                                    min: 1,
                                    max: @products.total_pages,
                                    class: "form-control form-control-sm text-center",
                                    style: "width: 80px;" %>
                                <%= f.submit "Ir", class: "btn btn-outline-primary btn-sm" %>
                            <% end %>
                        <% end %>
                    </div>

                    <!-- Main Pagination -->
                    <div class="d-flex justify-content-center">
                        <%= paginate @products,
                            theme: 'bootstrap-5',
                            pagination_class: "pagination justify-content-center",
                            nav_class: "d-flex justify-content-center",
                            params: {
                                search: params[:search],
                                category_id: params[:category_id],
                                sort_by: params[:sort_by],
                                per_page: params[:per_page]
                            } %>
                    </div>

                    <!-- Additional Pagination Info for Mobile -->
                    <div class="d-md-none text-center mt-3">
                        <% if @products.prev_page %>
                            <%= link_to products_path(page: @products.prev_page, search: params[:search], category_id: params[:category_id], sort_by: params[:sort_by], per_page: params[:per_page]),
                                class: "btn btn-outline-primary btn-sm me-2" do %>
                                <i class="fas fa-chevron-left me-1"></i>Anterior
                            <% end %>
                        <% end %>
                        <span class="text-muted small">
                            <%= @products.current_page %> / <%= @products.total_pages %>
                        </span>
                        <% if @products.next_page %>
                            <%= link_to products_path(page: @products.next_page, search: params[:search], category_id: params[:category_id], sort_by: params[:sort_by], per_page: params[:per_page]),
                                class: "btn btn-outline-primary btn-sm ms-2" do %>
                                Siguiente<i class="fas fa-chevron-right ms-1"></i>
                            <% end %>
                        <% end %>
                    </div>
                </div>


        <% else %>
            <!-- Empty state -->
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-search text-muted" style="font-size: 4rem; opacity: 0.3;"></i>
                </div>
                <h3 class="text-muted mb-3">No products found.</h3>
                <p class="text-muted mb-4">
                    <% if params[:search].present? || params[:category_id].present? %>
                        Try with a different search term or clear the filters.
                    <% else %>
                        No products available at the moment.
                    <% end %>
                </p>
                <% if params[:search].present? || params[:category_id].present? %>
                    <%= link_to "Browse all Products", products_path,
                        class: "btn btn-primary" %>
                <% end %>
            </div>
        <% end %>
    </div>
</section>

<!-- Quick Contact Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h3 class="mb-3">Dont find what you need?</h3>
                <p class="text-muted mb-4">Contact us directly and we will help you find the perfect instrument for you.</p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="https://wa.me/593996888655"
                       class="btn btn-success btn-lg rounded-pill" target="_blank">
                        <i class="fab fa-whatsapp me-2"></i>WhatsApp
                    </a>
                    <a href="mailto:info@percusionecuador.com"
                       class="btn btn-primary btn-lg rounded-pill">
                        <i class="fas fa-envelope me-2"></i>Email
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
