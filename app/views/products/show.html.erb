<!-- app/views/products/show.html.erb -->

<!-- Breadcrumb Navigation -->
<section class="bg-light py-3" style="margin-top: 76px;">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <%= link_to "Home", root_path, class: "text-decoration-none" %>
                </li>
                <li class="breadcrumb-item">
                    <%= link_to "Products", products_path, class: "text-decoration-none" %>
                </li>
                <% if @product.category %>
                    <li class="breadcrumb-item">
                        <%= link_to @product.category.name, category_path(@product.category), class: "text-decoration-none" %>
                    </li>
                <% end %>
                <li class="breadcrumb-item active" aria-current="page"><%= @product.name %></li>
            </ol>
        </nav>
    </div>
</section>

<!-- Product Details -->
<section class="py-5">
    <div class="container">
        <div class="row g-5">
            <!-- Product Images -->
            <div class="col-lg-6">
                <div class="product-images">
                    <% if @product.image.attached? %>
                        <!-- Main Image -->
                        <div class="main-image mb-3">
                            <div class="position-relative" style="height: 500px; background: #f8f9fa; border-radius: 15px; overflow: hidden;">
                                <%= image_tag @product.image,
                                    id: "mainProductImage",
                                    class: "w-100 h-100",
                                    style: "object-fit: contain; cursor: zoom-in;" %>

                                <!-- Image badges -->
                                <div class="position-absolute top-0 start-0 m-3">
                                    <% if @product.stock_quantity <= 5 && @product.stock_quantity > 0 %>
                                        <span class="badge bg-warning text-dark mb-1 d-block">Few Stock</span>
                                    <% elsif @product.stock_quantity == 0 %>
                                        <span class="badge bg-danger mb-1 d-block">Out of Stock</span>
                                    <% end %>
                                    <% if @product.created_at > 30.days.ago %>
                                        <span class="badge bg-success">New</span>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    <% else %>
                        <!-- Placeholder Image -->
                        <div class="d-flex align-items-center justify-content-center bg-light rounded-3" style="height: 500px;">
                            <div class="text-center">
                                <i class="fas fa-drum text-primary mb-3" style="font-size: 6rem; opacity: 0.3;"></i>
                                <p class="text-muted">No image available</p>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>

            <!-- Product Information -->
            <div class="col-lg-6">
                <div class="product-info">
                    <!-- Category Badge -->
                    <% if @product.category %>
                        <div class="mb-3">
                            <%= link_to category_path(@product.category), class: "text-decoration-none" do %>
                                <span class="badge bg-light text-primary fs-6 px-3 py-2">
                                    <i class="fas fa-tag me-1"></i><%= @product.category.name %>
                                </span>
                            <% end %>
                        </div>
                    <% end %>

                    <!-- Product Name -->
                    <h1 class="display-5 fw-bold text-dark mb-3"><%= @product.name %></h1>

                    <!-- Price -->
                    <div class="price-section mb-4">
                        <div class="h2 text-primary fw-bold mb-0">$<%= @product.selling_price %></div>

                    </div>

                    <!-- Stock Status -->
                    <div class="stock-info mb-4">
                        <% if @product.stock_quantity > 0 %>
                            <div class="d-flex align-items-center text-success">
                                <i class="fas fa-check-circle me-2"></i>
                                <span class="fw-semibold">En stock (<%= @product.stock_quantity %> disponibles)</span>
                            </div>
                        <% else %>
                            <div class="d-flex align-items-center text-danger">
                                <i class="fas fa-times-circle me-2"></i>
                                <span class="fw-semibold">Out of Stock</span>
                            </div>
                        <% end %>
                    </div>

                    <!-- Product Description -->
                    <% if @product.description.present? %>
                        <div class="description mb-4">
                            <h5 class="fw-semibold mb-3">Description</h5>
                            <p class="text-muted lh-lg"><%= simple_format(@product.description) %></p>
                        </div>
                    <% end %>

                    <!-- Vendor Information -->
                    <% if @product.vendor.present? %>
                        <div class="vendor-info mb-4 p-3 bg-light rounded-3">
                            <h6 class="fw-semibold mb-2">
                                <i class="fas fa-store me-2 text-primary"></i>Company/Brand
                            </h6>
                            <p class="mb-0 text-muted"><%= @product.vendor.name %></p>
                        </div>
                    <% end %>

                    <!-- Purchase Actions -->
                    <div class="purchase-section">


                        <!-- Action Buttons -->
                        <div class="d-grid gap-3 mb-4">
                            <% if @product.stock_quantity > 0 %>
                                <%= form_with url: add_cart_index_path(@product), method: :post, class: "add_to_cart_form button_to" do %>
                                  <label for="quantity" class="form-label fw-semibold">Quantity:</label>
                                  <div class="input-group">
                                    <button class="btn btn-outline-secondary" type="button" onclick="decreaseQuantity()">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <%= number_field_tag :quantity, 1, min: 1, max: @product.stock_quantity, class: "text-center", id: "quantity" %>
                                    <button class="btn btn-outline-secondary" type="button" onclick="increaseQuantity()">
                                        <i class="fas fa-plus"></i>
                                      </button>
                                  </div>
                                  <button type="submit" class="btn btn-primary rounded-3 add_button mt-4">
                                    <i class="fas fa-cart-plus me-2"></i> Add to Cart
                                  </button>
                                <% end %>
                            <% else %>
                                <button class="btn btn-secondary btn-lg rounded-3" disabled>
                                    <i class="fas fa-times me-2"></i>Out of Stock
                                </button>
                            <% end %>
                        </div>

                        <!-- Contact Options -->
                        <div class="contact-options">
                            <h6 class="fw-semibold mb-3">Any Questions?</h6>
                            <div class="row g-2">
                                <div class="col-md-6">
                                    <a href="https://wa.me/593996888655?text=Hi, I have one question about: <%= @product.name %>"
                                       class="btn btn-success w-100" target="_blank">
                                        <i class="fab fa-whatsapp me-2"></i>WhatsApp
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <a href="mailto:info@percusionecuador.com?subject=Question about <%= @product.name %>"
                                       class="btn btn-outline-primary w-100">
                                        <i class="fas fa-envelope me-2"></i>Email
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Product Details Tabs -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="nav nav-tabs nav-fill mb-4" id="productTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active fw-semibold" id="specifications-tab" data-bs-toggle="tab" data-bs-target="#specifications" type="button" role="tab">
                            <i class="fas fa-list me-2"></i>Specifications
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link fw-semibold" id="shipping-tab" data-bs-toggle="tab" data-bs-target="#shipping" type="button" role="tab">
                            <i class="fas fa-truck me-2"></i>Delivery
                        </button>
                    </li>
                </ul>

                <div class="tab-content" id="productTabsContent">
                    <!-- Specifications Tab -->
                    <div class="tab-pane fade show active" id="specifications" role="tabpanel">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body p-4">
                                <h5 class="card-title mb-4">Specifications of the product</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <table class="table table-borderless">
                                            <tr>
                                                <td class="fw-semibold text-muted">Name:</td>
                                                <td><%= @product.name %></td>
                                            </tr>
                                            <% if @product.category %>
                                                <tr>
                                                    <td class="fw-semibold text-muted">Category:</td>
                                                    <td><%= @product.category.name %></td>
                                                </tr>
                                            <% end %>
                                            <% if @product.vendor %>
                                                <tr>
                                                    <td class="fw-semibold text-muted">Company/Brand:</td>
                                                    <td><%= @product.vendor.name %></td>
                                                </tr>
                                            <% end %>
                                            <tr>
                                                <td class="fw-semibold text-muted">Stock:</td>
                                                <td>
                                                    <% if @product.stock_quantity > 0 %>
                                                        <span class="badge bg-success">In stock</span>
                                                    <% else %>
                                                        <span class="badge bg-danger">Out of Stock</span>
                                                    <% end %>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-md-6">
                                        <% if @product.description.present? %>
                                            <h6 class="fw-semibold mb-3">Detailed description</h6>
                                            <p class="text-muted"><%= simple_format(@product.description) %></p>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Shipping Tab -->
                    <div class="tab-pane fade" id="shipping" role="tabpanel">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body p-4">
                                <h5 class="card-title mb-4">Delivery Information</h5>
                                <div class="row g-4">
                                    <div class="col-md-4">
                                        <div class="text-center">
                                            <i class="fas fa-truck text-primary mb-3" style="font-size: 2rem;"></i>
                                            <h6 class="fw-semibold">Local Delivery</h6>
                                            <p class="text-muted small">Ship In Ecuador</p>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="text-center">
                                            <i class="fas fa-clock text-primary mb-3" style="font-size: 2rem;"></i>
                                            <h6 class="fw-semibold">Shipping Time</h6>
                                            <p class="text-muted small">2-5 business days</p>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="text-center">
                                            <i class="fas fa-shield-alt text-primary mb-3" style="font-size: 2rem;"></i>
                                            <h6 class="fw-semibold">Safe Delivery</h6>
                                            <p class="text-muted small">Protected package</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Related Products -->
<% if @related_products&.any? %>
    <section class="py-5">
        <div class="container">
            <h3 class="text-center mb-5">Related Products</h3>
            <div class="row g-4">
                <% @related_products.limit(4).each do |product| %>
                    <div class="col-lg-3 col-md-6">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="product-image position-relative" style="height: 200px; background: #f8f9fa;">
                                <% if product.image.attached? %>
                                    <%= image_tag product.images,
                                        class: "w-100 h-100",
                                        style: "object-fit: cover;" %>
                                <% else %>
                                    <div class="d-flex align-items-center justify-content-center h-100">
                                        <i class="fas fa-drum text-primary" style="font-size: 3rem; opacity: 0.3;"></i>
                                    </div>
                                <% end %>
                            </div>
                            <div class="card-body p-3">
                                <h6 class="card-title">
                                    <%= link_to product.name, product_path(product), class: "text-decoration-none text-dark" %>
                                </h6>
                                <div class="h6 text-primary fw-bold">$<%= product.selling_price %></div>
                                <div class="d-grid">
                                    <%= link_to "See Product", product_path(product), class: "btn btn-outline-primary btn-sm" %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </section>
<% end %>

<script>
// Image gallery functionality
function changeMainImage(imageSrc, thumbnail) {
    document.getElementById('mainProductImage').src = imageSrc;

    // Update active thumbnail
    document.querySelectorAll('.thumbnail-image').forEach(img => {
        img.classList.remove('active');
    });
    thumbnail.classList.add('active');
}

// Quantity controls
function increaseQuantity() {
    const quantityInput = document.getElementById('quantity');
    const currentValue = parseInt(quantityInput.value);
    const maxValue = parseInt(quantityInput.max);

    if (currentValue < maxValue) {
        quantityInput.value = currentValue + 1;
    }
}

function decreaseQuantity() {
    const quantityInput = document.getElementById('quantity');
    const currentValue = parseInt(quantityInput.value);

    if (currentValue > 1) {
        quantityInput.value = currentValue - 1;
    }
}
</script>
