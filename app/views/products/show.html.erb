<!-- app/views/products/show.html.erb -->

<!-- Breadcrumb Navigation -->
<section class="bg-light py-3" style="margin-top: 76px;">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <%= link_to "Inicio", root_path, class: "text-decoration-none" %>
                </li>
                <li class="breadcrumb-item">
                    <%= link_to "Productos", products_path, class: "text-decoration-none" %>
                </li>
                <% if @product.category %>
                    <li class="breadcrumb-item">
                        <%= link_to @product.category.name, categories_path(@product.category), class: "text-decoration-none" %>
                    </li>
                <% end %>
                <li class="breadcrumb-item active" aria-current="page"><%= @product.name %></li>
            </ol>
        </nav>
    </div>
</section>

<!-- Product Details -->
<section class="py-5">
    <div class="container">
        <div class="row g-5">
            <!-- Product Images -->
            <div class="col-lg-6">
                <div class="product-images">
                    <% if @product.images.attached? %>
                        <!-- Main Image -->
                        <div class="main-image mb-3">
                            <div class="position-relative" style="height: 500px; background: #f8f9fa; border-radius: 15px; overflow: hidden;">
                                <%= image_tag @product.images.first,
                                    id: "mainProductImage",
                                    class: "w-100 h-100",
                                    style: "object-fit: cover; cursor: zoom-in;" %>

                                <!-- Image badges -->
                                <div class="position-absolute top-0 start-0 m-3">
                                    <% if @product.quantity <= 5 && @product.quantity > 0 %>
                                        <span class="badge bg-warning text-dark mb-1 d-block">Pocas unidades</span>
                                    <% elsif @product.quantity == 0 %>
                                        <span class="badge bg-danger mb-1 d-block">Agotado</span>
                                    <% end %>
                                    <% if @product.created_at > 30.days.ago %>
                                        <span class="badge bg-success">Nuevo</span>
                                    <% end %>
                                </div>
                            </div>
                        </div>

                        <!-- Thumbnail Images -->
                        <% if @product.images.count > 1 %>
                            <div class="thumbnails">
                                <div class="row g-2">
                                    <% @product.images.each_with_index do |image, index| %>
                                        <div class="col-3">
                                            <%= image_tag image,
                                                class: "img-thumbnail w-100 thumbnail-image #{'active' if index == 0}",
                                                style: "height: 80px; object-fit: cover; cursor: pointer;",
                                                onclick: "changeMainImage('#{url_for(image)}', this)" %>
                                        </div>
                                    <% end %>
                                </div>
                            </div>
                        <% end %>
                    <% else %>
                        <!-- Placeholder Image -->
                        <div class="d-flex align-items-center justify-content-center bg-light rounded-3" style="height: 500px;">
                            <div class="text-center">
                                <i class="fas fa-drum text-primary mb-3" style="font-size: 6rem; opacity: 0.3;"></i>
                                <p class="text-muted">Sin imagen disponible</p>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>

            <!-- Product Information -->
            <div class="col-lg-6">
                <div class="product-info">
                    <!-- Category Badge -->
                    <% if @product.category %>
                        <div class="mb-3">
                            <%= link_to category_path(@product.category), class: "text-decoration-none" do %>
                                <span class="badge bg-light text-primary fs-6 px-3 py-2">
                                    <i class="fas fa-tag me-1"></i><%= @product.category.name %>
                                </span>
                            <% end %>
                        </div>
                    <% end %>

                    <!-- Product Name -->
                    <h1 class="display-5 fw-bold text-dark mb-3"><%= @product.name %></h1>

                    <!-- Price -->
                    <div class="price-section mb-4">
                        <div class="h2 text-primary fw-bold mb-0">$<%= @product.selling_price %></div>

                    </div>

                    <!-- Stock Status -->
                    <div class="stock-info mb-4">
                        <% if @product.stock_quantity > 0 %>
                            <div class="d-flex align-items-center text-success">
                                <i class="fas fa-check-circle me-2"></i>
                                <span class="fw-semibold">En stock (<%= @product.stock_quantity %> disponibles)</span>
                            </div>
                        <% else %>
                            <div class="d-flex align-items-center text-danger">
                                <i class="fas fa-times-circle me-2"></i>
                                <span class="fw-semibold">Producto agotado</span>
                            </div>
                        <% end %>
                    </div>

                    <!-- Product Description -->
                    <% if @product.description.present? %>
                        <div class="description mb-4">
                            <h5 class="fw-semibold mb-3">Descripción</h5>
                            <p class="text-muted lh-lg"><%= simple_format(@product.description) %></p>
                        </div>
                    <% end %>

                    <!-- Vendor Information -->
                    <% if @product.vendor.present? %>
                        <div class="vendor-info mb-4 p-3 bg-light rounded-3">
                            <h6 class="fw-semibold mb-2">
                                <i class="fas fa-store me-2 text-primary"></i>Proveedor
                            </h6>
                            <p class="mb-0 text-muted"><%= @product.vendor.name %></p>
                        </div>
                    <% end %>

                    <!-- Purchase Actions -->
                    <div class="purchase-section">
                        <!-- Quantity selector -->
                        <% if @product.stock_quantity > 0 %>
                            <div class="quantity-selector mb-4">
                                <label for="quantity" class="form-label fw-semibold">Cantidad:</label>
                                <div class="input-group" style="max-width: 150px;">
                                    <button class="btn btn-outline-secondary" type="button" onclick="decreaseQuantity()">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <input type="number" id="quantity" class="form-control text-center" value="1" min="1" max="<%= @product.stock_quantity %>">
                                    <button class="btn btn-outline-secondary" type="button" onclick="increaseQuantity()">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        <% end %>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-3 mb-4">
                            <% if @product.stock_quantity > 0 %>
                                <button class="btn btn-primary btn-lg rounded-3" onclick="addToCart(<%= @product.id %>)">
                                    <i class="fas fa-cart-plus me-2"></i>Agregar al Carrito
                                </button>
                                <button class="btn btn-outline-primary btn-lg rounded-3">
                                    <i class="fas fa-bolt me-2"></i>Comprar Ahora
                                </button>
                            <% else %>
                                <button class="btn btn-secondary btn-lg rounded-3" disabled>
                                    <i class="fas fa-times me-2"></i>Producto Agotado
                                </button>
                            <% end %>
                        </div>

                        <!-- Contact Options -->
                        <div class="contact-options">
                            <h6 class="fw-semibold mb-3">¿Tienes dudas sobre este producto?</h6>
                            <div class="row g-2">
                                <div class="col-md-6">
                                    <a href="https://wa.me/593996888655?text=Hola, tengo una consulta sobre: <%= @product.name %>"
                                       class="btn btn-success w-100" target="_blank">
                                        <i class="fab fa-whatsapp me-2"></i>WhatsApp
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <a href="mailto:info@percusionecuador.com?subject=Consulta sobre <%= @product.name %>"
                                       class="btn btn-outline-primary w-100">
                                        <i class="fas fa-envelope me-2"></i>Email
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Wishlist -->
                        <div class="text-center mt-4">
                            <button class="btn btn-link text-muted" onclick="addToWishlist(<%= @product.id %>)">
                                <i class="fas fa-heart me-1"></i>Agregar a favoritos
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Product Details Tabs -->
