<!-- app/views/categories/index.html.erb -->

<!-- Page Header -->
<section class="page-header d-flex align-items-center" style="background: linear-gradient(135deg, #0D8DC8, #1BACF0); padding: 120px 0 80px; margin-top: 76px;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <%= link_to root_path, class: "text-white-50 text-decoration-none" do %>
                                <i class="fas fa-home me-1"></i>Inicio
                            <% end %>
                        </li>
                        <li class="breadcrumb-item active text-white" aria-current="page">Categorías</li>
                    </ol>
                </nav>
                <h1 class="display-4 text-white fw-bold mb-3">Nuestras Categorías</h1>
                <p class="text-white-50 fs-5 mb-0">Explora nuestra amplia selección de instrumentos de percusión organizados por categorías</p>
            </div>
            <div class="col-lg-4 text-end">
                <div class="text-white">
                    <span class="display-6 fw-bold d-block"><%= @categories.count %></span>
                    <small class="opacity-75 fs-6">Categorías disponibles</small>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Grid -->
<section class="py-5">
    <div class="container">
        <% if @categories.any? %>
            <div class="row g-4">
                <% @categories.each do |category| %>
                    <div class="col-lg-4 col-md-6">
                        <div class="category-card card h-100 border-0 shadow-sm position-relative overflow-hidden">
                            <!-- Category Header -->
                            <div class="card-header border-0 bg-transparent p-4 pb-0">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="category-icon d-flex align-items-center justify-content-center rounded-circle"
                                         style="width: 60px; height: 60px; background: linear-gradient(135deg, #0D8DC8, #1BACF0);">
                                        <i class="fas fa-drum text-white fs-3"></i>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge bg-light text-primary fs-6 px-3 py-2">
                                            <%= category.products.count %> productos
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Category Content -->
                            <div class="card-body p-4">
                                <h4 class="card-title fw-bold mb-3">
                                    <%= link_to category.name, products_path(category_id: category.id),
                                        class: "text-decoration-none text-dark" %>
                                </h4>

                                <% if category.description.present? %>
                                    <p class="card-text text-muted mb-4">
                                        <%= truncate(category.description, length: 120) %>
                                    </p>
                                <% else %>
                                    <p class="card-text text-muted mb-4">
                                        Descubre nuestra selección de <%= category.name.downcase %> de las mejores marcas.
                                    </p>
                                <% end %>

                                <!-- Featured Products Preview -->
                                <% if category.products.any? %>
                                    <div class="featured-products mb-4">
                                        <h6 class="text-muted mb-3 fw-semibold">Productos destacados:</h6>
                                        <div class="row g-2">
                                            <% category.products.limit(3).each do |product| %>
                                                <div class="col-4">
                                                    <div class="product-mini position-relative">
                                                        <% if product.images.attached? %>
                                                            <%= image_tag product.images.first,
                                                                class: "w-100 rounded-2",
                                                                style: "height: 80px; object-fit: cover;" %>
                                                        <% else %>
                                                            <div class="bg-light rounded-2 d-flex align-items-center justify-content-center" style="height: 80px;">
                                                                <i class="fas fa-drum text-primary opacity-50"></i>
                                                            </div>
                                                        <% end %>
                                                        <div class="product-overlay position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 rounded-2 d-flex align-items-center justify-content-center opacity-0 transition-opacity">
                                                            <%= link_to product_path(product), class: "text-white text-decoration-none" do %>
                                                                <i class="fas fa-eye"></i>
                                                            <% end %>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% end %>
                                        </div>
                                    </div>
                                <% end %>

                                <!-- Price Range -->
                                <% if category.products.any? %>
                                    <div class="price-range mb-4">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-muted small">Rango de precios:</span>
                                            <span class="fw-semibold text-primary">
                                                $<%= category.products.minimum(:selling_price) %> - $<%= category.products.maximum(:selling_price) %>
                                            </span>
                                        </div>
                                    </div>
                                <% end %>

                                <!-- Action Buttons -->
                                <div class="d-grid gap-2">
                                    <%= link_to products_path(category_id: category.id),
                                        class: "btn btn-primary rounded-3" do %>
                                        <i class="fas fa-eye me-2"></i>Ver Productos
                                    <% end %>
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <a href="https://wa.me/593996888655?text=Hola, me interesan los productos de la categoría: <%= category.name %>"
                                               class="btn btn-outline-success btn-sm w-100" target="_blank">
                                                <i class="fab fa-whatsapp me-1"></i>WhatsApp
                                            </a>
                                        </div>
                                        <div class="col-6">
                                            <% if category.products.any? %>
                                                <%= link_to product_path(category.products.first),
                                                    class: "btn btn-outline-primary btn-sm w-100" do %>
                                                    <i class="fas fa-star me-1"></i>Destacado
                                                <% end %>
                                            <% else %>
                                                <button class="btn btn-outline-secondary btn-sm w-100" disabled>
                                                    <i class="fas fa-clock me-1"></i>Próximamente
                                                </button>
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Hover effect overlay -->
                            <div class="category-hover-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center opacity-0">
                                <%= link_to products_path(category_id: category.id),
                                    class: "btn btn-light btn-lg rounded-pill shadow" do %>
                                    <i class="fas fa-arrow-right me-2"></i>Explorar Categoría
                                <% end %>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        <% else %>
            <!-- Empty State -->
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-tags text-muted" style="font-size: 4rem; opacity: 0.3;"></i>
                </div>
                <h3 class="text-muted mb-3">No hay categorías disponibles</h3>
                <p class="text-muted mb-4">Actualmente no hay categorías configuradas en el sistema.</p>
                <%= link_to root_path, class: "btn btn-primary" do %>
                    <i class="fas fa-home me-2"></i>Volver al Inicio
                <% end %>
            </div>
        <% end %>
    </div>
</section>

<!-- Categories Statistics -->
<% if @categories.any? %>
    <section class="bg-light py-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <div class="h2 text-primary fw-bold mb-2">
                            <%= @categories.count %>
                        </div>
                        <p class="text-muted mb-0">Categorías</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <div class="h2 text-primary fw-bold mb-2">
                            <%= @categories.joins(:products).count %>
                        </div>
                        <p class="text-muted mb-0">Productos Totales</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <div class="h2 text-primary fw-bold mb-2">
                            <%= @categories.joins(:products).distinct.count('products.vendor_id') %>
                        </div>
                        <p class="text-muted mb-0">Marcas</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <div class="h2 text-primary fw-bold mb-2">14+</div>
                        <p class="text-muted mb-0">Años de Experiencia</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
<% end %>

<!-- Popular Categories -->
<% if @popular_categories&.any? %>
    <section class="py-5">
        <div class="container">
            <h3 class="text-center mb-5">Categorías Más Populares</h3>
            <div class="row g-4">
                <% @popular_categories.each do |category| %>
                    <div class="col-lg-6">
                        <div class="popular-category-card card border-0 shadow-sm">
                            <div class="row g-0">
                                <div class="col-4">
                                    <div class="category-image d-flex align-items-center justify-content-center h-100"
                                         style="background: linear-gradient(135deg, #0D8DC8, #1BACF0);">
                                        <i class="fas fa-drum text-white" style="font-size: 3rem;"></i>
                                    </div>
                                </div>
                                <div class="col-8">
                                    <div class="card-body">
                                        <h5 class="card-title fw-bold mb-2">
                                            <%= link_to category.name, products_path(category_id: category.id),
                                                class: "text-decoration-none text-dark" %>
                                        </h5>
                                        <p class="card-text text-muted small mb-3">
                                            <%= category.products.count %> productos disponibles
                                        </p>
                                        <%= link_to products_path(category_id: category.id),
                                            class: "btn btn-outline-primary btn-sm" do %>
                                            Ver Productos <i class="fas fa-arrow-right ms-1"></i>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </section>
<% end %>

<!-- Quick Contact Section -->
<section class="bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h3 class="mb-3">¿Necesitas ayuda para elegir?</h3>
                <p class="mb-0 fs-5">Nuestros expertos te pueden asesorar para encontrar el instrumento perfecto según tu nivel y estilo musical.</p>
            </div>
            <div class="col-lg-4 text-lg-end mt-4 mt-lg-0">
                <div class="d-flex gap-3 justify-content-lg-end">
                    <a href="https://wa.me/593996888655" class="btn btn-light btn-lg rounded-pill" target="_blank">
                        <i class="fab fa-whatsapp me-2"></i>WhatsApp
                    </a>
                    <a href="mailto:info@percusionecuador.com" class="btn btn-outline-light btn-lg rounded-pill">
                        <i class="fas fa-envelope me-2"></i>Email
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.category-card {
    transition: all 0.3s ease;
    cursor: pointer;
}

.category-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15) !important;
}

.category-card:hover .category-hover-overlay {
    opacity: 1;
    background: rgba(13, 141, 200, 0.9);
}

.product-mini:hover .product-overlay {
    opacity: 1 !important;
}

.category-hover-overlay {
    transition: all 0.3s ease;
    backdrop-filter: blur(5px);
    border-radius: 0.375rem;
}

.popular-category-card {
    transition: all 0.3s ease;
}

.popular-category-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1) !important;
}

.stat-item {
    padding: 1rem;
}

@media (max-width: 768px) {
    .category-card .row g-2 .col-4 {
        margin-bottom: 0.5rem;
    }

    .popular-category-card .row {
        flex-direction: column;
    }

    .popular-category-card .category-image {
        height: 120px;
    }
}
</style>

<script>
// Add click handler to category cards
document.addEventListener('DOMContentLoaded', function() {
    const categoryCards = document.querySelectorAll('.category-card');

    categoryCards.forEach(card => {
        card.addEventListener('click', function(e) {
            // Don't trigger if clicking on buttons or links
            if (e.target.closest('a, button')) return;

            const categoryLink = card.querySelector('h4 a');
            if (categoryLink) {
                window.location.href = categoryLink.href;
            }
        });
    });
});

// Smooth scroll for anchor links
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
            target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
        }
    });
});
</script>