
<!-- Page Header -->
<section class="page-header d-flex align-items-center" style="background: linear-gradient(135deg, #0D8DC8, #1BACF0); padding: 120px 0 80px; margin-top: 76px;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <%= link_to root_path, class: "text-white-50 text-decoration-none" do %>
                                <i class="fas fa-home me-1"></i>Home
                            <% end %>
                        </li>
                        <li class="breadcrumb-item active text-white" aria-current="page">Categories</li>
                    </ol>
                </nav>
                <h1 class="display-4 text-white fw-bold mb-3">Our Categories</h1>
                <p class="text-white-50 fs-5 mb-0">Explore our wide selection of percussion instruments organized by category</p>
            </div>
            <div class="col-lg-4 text-end">
                <div class="text-white">
                    <span class="display-6 fw-bold d-block"><%= @category_count %></span>
                    <small class="opacity-75 fs-6">Available Categories</small>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Grid -->
<section class="py-5">
    <div class="container">
        <% if @categories.any? %>
            <div class="row g-4">
                <% @categories.each do |category| %>
                    <div class="col-lg-4 col-md-6">
                        <div class="category-card card h-100 border-0 shadow-sm position-relative overflow-hidden">
                            <!-- Category Header -->
                            <div class="card-header border-0 bg-transparent p-4 pb-0">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="category-icon d-flex align-items-center justify-content-center rounded-circle"
                                         style="width: 60px; height: 60px; background: linear-gradient(135deg, #0D8DC8, #1BACF0);">
                                        <i class="fas fa-drum text-white fs-3"></i>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge bg-light text-primary fs-6 px-3 py-2">
                                            <%= category.products.count %> products
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Category Content -->
                            <div class="card-body p-4">
                                <h4 class="card-title fw-bold mb-3">
                                    <%= link_to category.name, products_path(category_id: category.id),
                                        class: "text-decoration-none text-dark" %>
                                </h4>

                                <% if category.description.present? %>
                                    <p class="card-text text-muted mb-4">
                                        <%= truncate(category.description, length: 120) %>
                                    </p>
                                <% else %>
                                    <p class="card-text text-muted mb-4">
                                        Discover our <%= category.name.downcase %> best brand catalog.
                                    </p>
                                <% end %>

                                <!-- Featured Products Preview -->
                                <% if category.products.any? %>
                                    <div class="featured-products mb-4">
                                        <h6 class="text-muted mb-3 fw-semibold">Featured Products:</h6>
                                        <div class="row g-2">
                                            <% category.products.limit(3).each do |product| %>
                                                <div class="col-4">
                                                    <div class="product-mini position-relative">
                                                        <% if product.image.attached? %>
                                                            <%= image_tag product.images,
                                                                class: "w-100 rounded-2",
                                                                style: "height: 80px; object-fit: cover;" %>
                                                        <% else %>
                                                            <div class="bg-light rounded-2 d-flex align-items-center justify-content-center" style="height: 80px;">
                                                                <i class="fas fa-drum text-primary opacity-50"></i>
                                                            </div>
                                                        <% end %>
                                                        <div class="product-overlay position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 rounded-2 d-flex align-items-center justify-content-center opacity-0 transition-opacity">
                                                            <%= link_to product_path(product), class: "text-white text-decoration-none" do %>
                                                                <i class="fas fa-eye"></i>
                                                            <% end %>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% end %>
                                        </div>
                                    </div>
                                <% end %>

                                <!-- Price Range -->
                                <% if category.products.any? %>
                                    <div class="price-range mb-4">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-muted small">Prices Range:</span>
                                            <span class="fw-semibold text-primary">
                                                $<%= category.products.minimum(:selling_price) %> - $<%= category.products.maximum(:selling_price) %>
                                            </span>
                                        </div>
                                    </div>
                                <% end %>

                                <!-- Action Buttons -->
                                <div class="d-grid gap-2">
                                    <%= link_to products_path(category_id: category.id),
                                        class: "btn btn-primary rounded-3" do %>
                                        <i class="fas fa-eye me-2"></i>Browse Products
                                    <% end %>
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <a href="https://wa.me/593996888655?text=Hola, me interesan los productos de la categorÃ­a: <%= category.name %>"
                                               class="btn btn-outline-success btn-sm w-100" target="_blank">
                                                <i class="fab fa-whatsapp me-1"></i>WhatsApp
                                            </a>
                                        </div>
                                        <div class="col-6">
                                            <% if category.products.any? %>
                                                <%= link_to product_path(category.products.first),
                                                    class: "btn btn-outline-primary btn-sm w-100" do %>
                                                    <i class="fas fa-star me-1"></i>Featured
                                                <% end %>
                                            <% else %>
                                                <button class="btn btn-outline-secondary btn-sm w-100" disabled>
                                                    <i class="fas fa-clock me-1"></i>Coming Soon
                                                </button>
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                <% end %>
            </div>
        <% else %>
            <!-- Empty State -->
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-tags text-muted" style="font-size: 4rem; opacity: 0.3;"></i>
                </div>
                <h3 class="text-muted mb-3">No available categories</h3>
                <p class="text-muted mb-4">There are currently no categories added in the system.</p>
                <%= link_to root_path, class: "btn btn-primary" do %>
                    <i class="fas fa-home me-2"></i>Return to Home
                <% end %>
            </div>
        <% end %>
    </div>
</section>

<!-- Categories Statistics -->
<% if @categories.any? %>
    <section class="bg-light py-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <div class="h2 text-primary fw-bold mb-2">
                            <%= @category_count %>
                        </div>
                        <p class="text-muted mb-0">Categories</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <div class="h2 text-primary fw-bold mb-2">
                            <%= @product_categories_count %>
                        </div>
                        <p class="text-muted mb-0">Total Products</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <div class="h2 text-primary fw-bold mb-2">
                            <%= @vendor_categories_count %>
                        </div>
                        <p class="text-muted mb-0">Brands</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <div class="h2 text-primary fw-bold mb-2">14+</div>
                        <p class="text-muted mb-0">Years of Experience</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
<% end %>

<!-- Popular Categories -->
<% if @popular_categories&.any? %>
    <section class="py-5">
        <div class="container">
            <h3 class="text-center mb-5">Popular Categories</h3>
            <div class="row g-4">
                <% @popular_categories.each do |category| %>
                    <div class="col-lg-6">
                        <div class="popular-category-card card border-0 shadow-sm">
                            <div class="row g-0">
                                <div class="col-4">
                                    <div class="category-image d-flex align-items-center justify-content-center h-100"
                                         style="background: linear-gradient(135deg, #0D8DC8, #1BACF0);">
                                        <i class="fas fa-drum text-white" style="font-size: 3rem;"></i>
                                    </div>
                                </div>
                                <div class="col-8">
                                    <div class="card-body">
                                        <h5 class="card-title fw-bold mb-2">
                                            <%= link_to category.name, products_path(category_id: category.id),
                                                class: "text-decoration-none text-dark" %>
                                        </h5>
                                        <p class="card-text text-muted small mb-3">
                                            <%= category.products.count %> available products
                                        </p>
                                        <%= link_to products_path(category_id: category.id),
                                            class: "btn btn-outline-primary btn-sm" do %>
                                            Browse Products <i class="fas fa-arrow-right ms-1"></i>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </section>
<% end %>

