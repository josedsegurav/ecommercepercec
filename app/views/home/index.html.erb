                        <div class="row text-center text-white mb-4">
                            <div class="col-4">
                                <div class="stat-item">
                                    <span class="display-4 fw-bold d-block">14+</span>
                                    <small class="opacity-75">Years of Experience</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-item">
                                    <span class="display-4 fw-bold d-block"><%= @product_count %>+</span>
                                    <small class="opacity-75">Available Products</small>
                                </div>
                            </div>
                        </div>

                        <div class="hero-buttons">
                            <a href="#productos" class="btn btn-primary btn-lg me-3 mb-2">
                                <i class="fas fa-shopping-bag me-2"></i>See Products
                            </a>
                            <a href="https://wa.me/593996888655" class="btn btn-outline-primary btn-lg">
                                <i class="fab fa-whatsapp me-2"></i>WhatsApp Message
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="instrument-showcase p-5 text-center">
                        <div class="instrument-icon d-flex align-items-center justify-content-center mx-auto mb-3">
                            <i class="fas fa-drum"></i>
                        </div>
                        <h3 class="text-white fw-semibold mb-3">Premium Products</h3>
                        <p class="text-white-50 mb-0">We Import from renowned international brands.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Categories Section -->
    <section class="py-5" id="categorias" style="padding: 100px 0;">
        <div class="container">
            <h2 class="section-title text-center position-relative mb-3">Categories</h2>
            <p class="text-center text-muted fs-5 mb-5">Find exactly what you need.</p>

            <div class="row g-4">
            <% @categories.each do |category| %>
                    <div class="col-lg-3 col-md-6">
                        <div class="category-card card h-100 p-4 text-center">
                            <div class="category-icon d-flex align-items-center justify-content-center mx-auto mb-3">
                                <i class="fas fa-drum"></i>
                            </div>

                            <h4 class="h5 fw-semibold mb-3"><%= link_to category.name, products_path(category_id: category.id),
                                        class: "text-decoration-none text-dark" %></h4>

                            <p class="text-muted mb-3"><%= category.description %></p>
                            <%= link_to category_path(category), class: "text-primary text-decoration-none fw-semibold" do %>

                                Browse products <i class="fas fa-arrow-right ms-1"></i>
                            <% end %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </section>

    <!-- Featured Products -->
    <section class="bg-light" id="productos" style="padding: 100px 0;">
        <div class="container">
            <h2 class="section-title text-center position-relative mb-3">Featured Products</h2>
            <p class="text-center text-muted fs-5 mb-5">Bestsellers and recommended</p>

            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <div class="product-card card h-100">
                        <div class="product-image d-flex align-items-center justify-content-center position-relative">
                            <% if @low_quantity_products.image.attached? %>
                                    <%= image_tag @low_quantity_products.images,
                                        class: "w-100 h-100",
                                        style: "object-fit: cover;" %>
                                <% else %>
                                    <div class="d-flex align-items-center justify-content-center h-100">
                                        <i class="fas fa-drum text-primary" style="font-size: 4rem; opacity: 0.3;"></i>
                                    </div>
                                <% end %>

                                <span class="position-absolute top-0 start-0 m-3 badge bg-light text-primary">BestSeller</span>
                        </div>
                        <div class="card-body p-4">
                            <h5 class="card-title fw-semibold"><%= @low_quantity_products.name %></h5>
                            <p class="card-text text-muted"><%= @low_quantity_products.description %></p>
                            <div class="h4 text-primary fw-bold mb-3">$<%= @low_quantity_products.selling_price %></div>
                            <%= button_to add_cart_index_path(@low_quantity_products), method: :post, class: "add_button btn btn-primary rounded-3" do %>
                                      <i class="fas fa-cart-plus me-2"></i>Add to Cart
                                      <% end %>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="product-card card h-100">
                        <div class="product-image d-flex align-items-center justify-content-center position-relative">
                        <% if @latest_product.image.attached? %>
                                    <%= image_tag @low_quantity_products.images,
                                        class: "w-100 h-100",
                                        style: "object-fit: cover;" %>
                                <% else %>
                                    <div class="d-flex align-items-center justify-content-center h-100">
                                        <i class="fas fa-drum text-primary" style="font-size: 4rem; opacity: 0.3;"></i>
                                    </div>
                                <% end %>
                        <span class="position-absolute top-0 start-0 m-3 badge bg-light text-primary">New</span>

                        </div>
                        <div class="card-body p-4">
                            <h5 class="card-title fw-semibold"><%= @latest_product.name %></h5>
                            <p class="card-text text-muted"><%= @latest_product.description %></p>
                            <div class="h4 text-primary fw-bold mb-3">$<%= @latest_product.selling_price %></div>
                            <button class="btn btn-primary w-100 rounded-3">
                                <i class="fas fa-cart-plus me-2"></i>Add to Cart
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="product-card card h-100">
                        <div class="product-image d-flex align-items-center justify-content-center position-relative">
                        <% if @high_quantity_products.image.attached? %>
                                    <%= image_tag @low_quantity_products.image,
                                        class: "w-100 h-100",
                                        style: "object-fit: cover;" %>
                                <% else %>
                                    <div class="d-flex align-items-center justify-content-center h-100">
                                        <i class="fas fa-drum text-primary" style="font-size: 4rem; opacity: 0.3;"></i>
                                    </div>
                                <% end %>
                        <span class="position-absolute top-0 start-0 m-3 badge bg-light text-primary">Sales</span>

                        </div>
                        <div class="card-body p-4">
                            <h5 class="card-title fw-semibold"><%= @high_quantity_products.name %></h5>
                            <p class="card-text text-muted"><%= @high_quantity_products.description %></p>
                            <div class="h4 text-primary fw-bold mb-3">$<%= @high_quantity_products.selling_price %></div>
                            <button class="btn btn-primary w-100 rounded-3">
                                <i class="fas fa-cart-plus me-2"></i>Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-5">
                <a href="#" class="btn btn-outline-primary btn-lg">
                    Browse All Productos <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </section>

